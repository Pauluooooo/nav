# CSS/JS: always revalidate to avoid stale front-end logic when version tags are not updated in every deploy path.
/css/*
  Cache-Control: public, max-age=0, must-revalidate

/js/*
  Cache-Control: public, max-age=0, must-revalidate

# Other static assets can still cache aggressively.
/favicon.svg
  Cache-Control: public, max-age=31536000, immutable

# HTML Files - Do not cache (Revalidate)
# Ensures users always get the latest version references
/*.html
  Cache-Control: public, max-age=0, must-revalidate
